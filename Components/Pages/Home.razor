@page "/"

<PageTitle>Home</PageTitle>

<div class="hero-section">
    <video autoplay muted loop id="background-video">
        <source src="videos/background-video.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <div class="container">
        <div class="hero-text">
            <h1>Explore the world with the best flight deals, from any destination.</h1>
            <p class="subheading">Book now and save on your next adventure!</p>
        </div>

        <div class="search-form container mt-5">
            <div class="form-row mb-4">
                <div class="col-md-1">
                    <select id="tripType" class="form-select">
                        <option value="return" selected>Return</option>
                        <option value="one-way">One Way</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <div class="dropdown passengers-dropdown">
                        <button class="btn btn-select" type="button" id="passengerDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            1 Adult, 0 Children
                        </button>
                        <ul class="dropdown-menu p-3">
                            <li class="d-flex justify-content-between align-items-center">
                                <span>Adults (18+)</span>
                                <div class="input-group">
                                    <button class="btn btn-minus" type="button">-</button>
                                    <input type="text" value="1" class="form-control text-center" readonly>
                                    <button class="btn btn-plus" type="button">+</button>
                                </div>
                            </li>
                            <li class="mt-2 d-flex justify-content-between align-items-center">
                                <span>Children</span>
                                <div class="input-group">
                                    <button class="btn btn-minus" type="button">-</button>
                                    <input type="text" value="0" class="form-control text-center" readonly>
                                    <button class="btn btn-plus" type="button">+</button>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-1">
                    <select id="cabinClass" class="form-select">
                        <option value="economy" selected>Economy</option>
                        <option value="premium-economy">Premium Economy</option>
                        <option value="business">Business</option>
                        <option value="first">First</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <div class="dropdown baggage-dropdown">
                        <button class="btn btn-select" type="button" id="baggageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Cabin Bag: 0, Checked Bag: 0
                        </button>
                        <ul class="dropdown-menu p-3">
                            <li class="d-flex justify-content-between align-items-center">
                                <span>Cabin Bag</span>
                                <div class="input-group">
                                    <button class="btn btn-minus" type="button">-</button>
                                    <input type="text" value="0" class="form-control text-center" readonly>
                                    <button class="btn btn-plus" type="button">+</button>
                                </div>
                            </li>
                            <li class="mt-2 d-flex justify-content-between align-items-center">
                                <span>Checked Bag</span>
                                <div class="input-group">
                                    <button class="btn btn-minus" type="button">-</button>
                                    <input type="text" value="0" class="form-control text-center" readonly>
                                    <button class="btn btn-plus" type="button">+</button>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col position-relative">
                    <i class="fas fa-plane-departure input-icon"></i>
                    <input type="text" id="from" class="form-control input-with-icon" placeholder="From?">
                </div>

                <div class="col-auto d-flex align-items-center">
                    <i class="fas fa-exchange-alt"></i>
                </div>

                <div class="col position-relative">
                    <i class="fas fa-plane-arrival input-icon"></i>
                    <input type="text" id="to" class="form-control input-with-icon" placeholder="To?">
                </div>
                 
                <div class="col">
                    <input type="date" id="departure" class="form-control input-with-icon">
                </div>
                <div class="col return-date">
                    <input type="date" id="return" class="form-control input-with-icon">
                </div>

                <div class="col-auto">
                    <button type="submit" class="btn btn-search"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>
